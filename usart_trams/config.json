{
  "serial": {
    "port": "COM12",
    "baudrate": 128000,
    "timeout": 0.1,
    "bytesize": 8,
    "parity": "N",
    "stopbits": 1,
    "xonxoff": false,
    "rtscts": false,
    "dsrdtr": false
  },
  "processing": {
    "buffer_size": 1024,
    "batch_size": 1,
    "max_queue_size": 200,
    "processing_interval": 0.0001,
    "data_format": "ascii",
    "enable_filtering": true,
    "filter_threshold": 0.005
  },
  "visualization": {
    "window_width": 1200,
    "window_height": 800,
    "update_interval": 0.0,
    "max_points": 300,
    "line_width": 2.0,
    "background_color": "black",
    "line_color": "green",
    "enable_realtime": true,
    "show_statistics": true
  },
  "performance": {
    "use_multiprocessing": true,
    "worker_processes": 2,
    "use_numpy_acceleration": true,
    "enable_caching": true,
    "cache_size": 1000,
    "memory_limit_mb": 512
  }
}
